<Window x:Class="Example13Project.SumCalcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="SumCalcWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <TextBlock x:Name="lblNumber1" TextWrapping="Wrap" Text="Number 1" Canvas.Left="250" Canvas.Top="82"/>
        <TextBlock x:Name="lblNumber2" TextWrapping="Wrap" Text="Number 2" Canvas.Left="250" Canvas.Top="152"/>
        <TextBlock x:Name="lblSum" TextWrapping="Wrap" Text="Sum" Canvas.Left="250" Canvas.Top="217"/>
        <TextBox x:Name="txtNumber1" TextWrapping="Wrap" Width="120" Canvas.Left="436" Canvas.Top="82"/>
        <TextBox x:Name="txtNumber2" TextWrapping="Wrap" Width="120" Canvas.Left="436" Canvas.Top="152"/>
        <TextBox x:Name="txtSum" TextWrapping="Wrap" Width="120" Canvas.Left="436" Canvas.Top="215"/>
        <Button x:Name="btnFindSum" Content="Find Sum" Canvas.Left="380" Canvas.Top="278" HorizontalAlignment="Left" VerticalAlignment="Center" Width="131" Click="btnFindSum_Click"/>

    </Canvas>
</Window>
