<Window x:Class="Example13Project.SquareCalcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="SquareCalcWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>

        <TextBlock x:Name="lblNumber1" TextWrapping="Wrap" Text="Number 1" Canvas.Left="250" Canvas.Top="82"/>
       
        <TextBlock x:Name="lblResult" TextWrapping="Wrap" Text="Result" Canvas.Left="250" Canvas.Top="217"/>
        <TextBox x:Name="txtNumber1" TextWrapping="Wrap" Width="120" Canvas.Left="436" Canvas.Top="82"/>
       
        <TextBox x:Name="txtResult" TextWrapping="Wrap" Width="120" Canvas.Left="436" Canvas.Top="215" IsEnabled="False"/>
        <Button x:Name="btnFindSquare" Content="Find Square"  Canvas.Left="269" Canvas.Top="281" HorizontalAlignment="Left" VerticalAlignment="Top" Width="131" Click="btnFindSquare_Click" />
        <Button x:Name="btnCube" Content="Find Cube" Canvas.Left="476" Canvas.Top="281" HorizontalAlignment="Left" VerticalAlignment="Center" Width="107" Click="btnCube_Click"/>



    </Canvas>
</Window>
